# Standard Rails ignores
/log/*
/tmp/*
!/log/.keep
!/tmp/.keep
/tmp/cache/*       # Explicitly ignore cached files
/tmp/storage/*
/tmp/pids/*
/tmp/sockets/*

# Ignore uploaded files in development
/storage/*
!/storage/.keep

# Ignore asset cache
/tmp/cache/assets/*

# Ignore environment files
.env
.env.local
.env.development
.env.test
.env.production

# Ignore IDE and editor files
.idea/
.vscode/
*.swp
*.swo
.DS_Store

# Ignore Ruby/Bundler files
/.bundle
/vendor/bundle
*.gem
*.rbc

# Ignore Node/yarn files
/node_modules
/yarn-error.log
.yarn/cache
.yarn/build-state.yml
.yarn/install-state.gz
.pnp.*

# Ignore test coverage
/coverage

# Ignore database files
*.sqlite3
*.sqlite3-*
*.sqlite3-journal

# Ignore Spring files
/spring/*.pid

# Ignore production files
/public/assets
/public/packs
/public/packs-test

# Ignore npm debug logs
npm-debug.log*

# Ignore Ruby version manager files
.ruby-version
.rbenv-vars

# Ignore bundle audit files
bundler-audit.html

# Ignore Rails master key
/config/master.key
/config/credentials/*.key

# Ignore Heroku files
*.env

# Ignore local docs
/.yardoc/
/_yardoc/
/doc/
/rdoc/

# Ignore OS metadata
Thumbs.db
ehthumbs.db
Desktop.ini