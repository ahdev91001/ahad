<% content_for :title, @property.address1 %>

    <!-- Big address title that zooms in at top upon page load -->
    <div id="ps-addr-title-zoom-container">
      <h3 id="ps-addr-title-zoom">
        <span id="ps-addr-title-zoom__text">
        <%= @property.address1 %></span>
      </h3>
    </div>
    
    <div id="ps-photo-main-container">
      <% if (photo = @property.photos.first) && photo.filename %>
        <%= image_tag("http://altadenaheritagepdb.org/photo/" + 
              photo.filename, 
              :id => "ps-photo-main", :alt => "Photo of Property") %>
      <% else %>
        <div id='ps-photo-main-no-photo'>
          <%= image_tag('house-stick-figure-med.png',
                    :alt => 'Cartoon Photo of Property') %>
          <br>
          We do not have a picture of this house yet.  
          <a href="http://altadenaheritage.org/contact-us/" target="_blank">
          Let us know</a> if you have one!
        </div>
      <% end %>

    </div>
    
    <div id="ps-addr-title-fader"><%= @property.address1 %></div>
    
    <!-- All fields listed below -->
    <div id="ps-db-details">
  
  <%= ps_markup_field_or_hide("Year Built", @property.yearbuilt, false,
                              @property.yearbuiltflag, "A",
                              " (actual)", " (estimated)") %>
  <%= ps_markup_field_or_hide("Year Built (Assessor)", 
                              @property.yearbuiltassessor, true) %>
  <%= ps_markup_field_or_hide("Year Built (Other)", 
                              @property.yearbuiltother, true) %>

  <%= ps_markup_field_or_hide("Architect", @property.architect, false,
                              @property.architectconfirmed, "Y",
                              " (confirmed)", " (unconfirmed)") %>
  <%= ps_markup_field_or_hide("Builder", @property.builder, false,
                              @property.builderconfirmed, "Y",
                              " (confirmed)", " (unconfirmed)") %>

  <%= ps_markup_field_or_hide("Stories", @property.stories) %>

  <%= ps_markup_field_or_hide("APN", (apn = @property.apn) && apn.parcel) %>

  <%= ps_markup_field_or_hide("Current Lot Size", @property.currentlotsize) %>
  <%= ps_markup_field_or_hide("Historic Name", @property.historicname) %>
  <%= ps_markup_field_or_hide("Legal Description", 
                              @property.legaldescription) %>
  <%= ps_markup_field_or_hide("Style", @property.style) %>

  <%= ps_markup_field_or_hide("Original Owner", @property.originalowner) %>
  <%= ps_markup_field_or_hide("Original Owner Spouse", 
                              @property.originalownerspouse, true) %>
  <%= ps_markup_field_or_hide("Original Owner Occupation", 
                              @property.originalowneroccupation, true) %>
  <%= ps_markup_field_or_hide("Original Cost", 
        number_to_currency(@property.originalcost, :precision => 0)) %>
  <%= ps_markup_field_or_hide("Original Lot Size", 
                              @property.originallotsize) %>

  <%= ps_markup_field_or_hide("Moved on to Property", 
                              @property.movedontoproperty, true) %>
  <%= ps_markup_field_or_hide("Place of Business", 
                              @property.placeofbusiness, true) %>
  <%= ps_markup_field_or_hide("Street Direction", 
                              @property.streetdirection, true) %>
  <%= ps_markup_field_or_hide("Address Notes", 
                              @property.addressnote, true) %>
  <%= ps_markup_field_or_hide("Quadrant", 
                              @property.quadrant, true) %>
  <%= ps_markup_field_or_hide("Type", 
      @property.type != nil ? @property.type.capitalize : "", true) %>

      <div id="ps-note-sources">
    	  <%= if (@property.notes_shpo_and_sources != nil) then 
    		      markdown(@property.notes_shpo_and_sources)
    		    end 
    	  %>
      </div>
    
    </div> <!-- end ps-db-details -->
    
    <div id="prop-search-again-container">
    	<button id="ps-search-again-btn" 
    	  class="btn-arrow-anim  btn-arrow-anim--wide-square-bottom" type="button">
    		<span class=".btn-arrow-anim__text">Search Again </span>
    	</button>
    </div>