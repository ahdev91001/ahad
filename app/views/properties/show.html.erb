<% if ( @photo != nil ) then 
		photourl = "http://altadenaheritagepdb.org/photo/" + @photo.filename
	else
		photourl = "None"
	end %>


<!-- Search results at bottom with pic of house, details, and map -->
<div id="searchresults">
	
	<div id="addrtitlecontainer">
		<h3 id="addrtitle"><%= @property.address1 %></h3>
	</div>
	
	<div id="houseimgcontainer">
		<% if ( photourl == "None" ) then %>
			We don't have a picture of this house yet.
			<!-- link to some placeholder or cutesy house image -->			
		<% else %>
		  <img id="houseimg" src="<%= photourl %>">
		<% end %>	
	</div>
	
	<div id="housestory">
	
		Year built: <%= @property.yearbuilt %>
		<%= if ( @property.yearbuiltflag == "A" ) then "(verified)" end %>
		<br />
	
		<%= if ( @property.builder != nil ) then 
					"Builder: " +  @property.builder 
				else
					"Builder: Unknown"
				end %><br />
	
		<%= if ( @property.stories != nil ) then 
				"Stories: " +  @property.stories
			else
				"Stories: Unknown"
			end %><br />
				
		<%= if ( @property.originalowner != nil ) then 
				"Original Owner: " +  @property.originalowner
			else
				"Original Owner: Unknown"
			end %><br />
	
		<%= if ( @apn != nil && @apn.parcel != nil ) then 
				"APN: " +  @apn.parcel
			else
				"APN: Unknown"
			end %><br />
			
		<!-- Significance code: Eligible for California Historical Resources Inventory<br /> -->
		
		<!--
		Sources: B&C 5/8/25, p. 67 (NofC)<br />
		-->
		
	</div> <!-- housestory -->
