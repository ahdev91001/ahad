<!DOCTYPE html>
<html>
  <head>
    <title>AhadWebsite</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= stylesheet_link_tag    'application',
      'https://fonts.googleapis.com/css?family=Open+Sans+Condensed:300',
       media: 'all', 'data-turbolinks-track' => true %>

    <%= favicon_link_tag 'AHL.ico' %>
  </head>

  <body>
    <!-- Fixed translucent title bar at top -->
    <div id="ahtitle">
        <%= image_tag("AHAD_Header_Logo_From_Website_Alpha_2.png", :id => "ahtitleimg") %>
    </div>
    <%= yield %>
  </body>
</html>
